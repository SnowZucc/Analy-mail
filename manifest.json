{
  "manifest_version": 3,
  "name": "Analy'mail",
  "version": "1",
  "description": "Scans your emails in search of phishing attacks",
  "permissions": ["tabs"],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://outlook.office.com/*"
  ],
  "action": {
    "default_icon": {
      "16": "cropped.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
"content_scripts": [
  {
    "matches": [
      "https://mail.google.com/*", 
      "https://*.mail.google.com/*",
      "https://outlook.office.com/*", 
      "https://outlook.live.com/*"
    ],
    "js": ["contentScript.js"],
    "run_at": "document_idle"
  }
],
  "icons": {
    "16": "cropped.png"
  }
}