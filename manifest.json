{
  "manifest_version": 3,
  "name": "CyberCoach",
  "version": "2.0",
  "description": "Analyse locale et rapide des emails pour évaluer les risques et sensibiliser à la cybersécurité.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://mail.google.com/*",
    "*://outlook.live.com/*",
    "*://outlook.office.com/*",
    "*://outlook.office365.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://mail.google.com/*",
        "*://outlook.live.com/*",
        "*://outlook.office.com/*",
        "*://outlook.office365.com/*"
      ],
      "js": ["content_scripts/main.js"],
      "css": ["styles/main.css", "styles/loading.css"],
      "run_at": "document_idle"
    }
  ]
}